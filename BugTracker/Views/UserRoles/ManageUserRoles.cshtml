@using BugTracker.Models.Enums
@using BugTracker.Services.Interfaces
@model IEnumerable<BugTracker.Models.ViewModels.ManageUserRolesViewModel>

@inject IBTRolesService RolesService


<h3 class="mt-2 mb-4">Manage Member Roles</h3>
<hr />

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                <i class="fas fa-users text-secondary"></i>
                <strong>Members</strong>
            </div>
            <div class="card-body p-2">
                <table id="datatablesCompanyMembers" class="table table-striped dt-responsive w-100">
                    <thead>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Role
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            @if (!(await RolesService.IsUserInRoleAsync(member.BTUser, nameof(Roles.DemoUser))) && !(await RolesService.IsUserInRoleAsync(member.BTUser, nameof(Roles.SiteAdmin))))
                            {
                                <tr>
                                    <td>
                                        @member.BTUser.FirstName
                                    </td>
                                    <td>
                                        @member.BTUser.LastName
                                    </td>
                                    <td>
                                        @member.BTUser.Email
                                    </td>
                                    <td>
                                        <form asp-action="ManageUserRoles" asp-controller="UserRoles" method=post>
                                            <input type="hidden" asp-for="@member.BTUser.Id" />
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <select asp-for="@member.SelectedRole" class="form-control" asp-items="@member.Roles"></select>
                                                    </div>
                                                </div>
                                                <div class="col-6 align-self-center">
                                                    <div class="form-group">
                                                        <input type="submit" value="Assign Role" class="btn btn-sm btn-info text-white" />
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

