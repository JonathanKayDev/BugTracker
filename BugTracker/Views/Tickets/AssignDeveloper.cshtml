@model BugTracker.Models.ViewModels.AssignDeveloperViewModel


<div class="">
    <h3 class="mt-2 mb-4">Assign Developer</h3>
    <div class="row">

        <div class="col-md-6">
            <h4> @Model.Ticket.Title</h4>
            <a style="text-decoration: none" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>

            <div class="card shadow mt-4">
                <div class="card-header">
                    <i class="fas fa-user-edit text-secondary"></i>
                    <strong>Assign Developer</strong>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input asp-for="Ticket.Id" hidden/>
                        <p>Ticket Description: @Model.Ticket.Description</p>

                        <div class="form-group">
                            <label class="col-form-label">Select Developer</label>

                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 mb-4">
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>

</div>