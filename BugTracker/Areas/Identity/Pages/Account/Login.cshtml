@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    body {
        background-image: url('/img/splash.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-blend-mode: overlay;
        background-size: auto;
    }
</style>

<div class="row justify-content-center mt-4 pt-4">
    <div class="col col-md-6 col-lg-4">
        <section>
@*            <div class="text-center">
                    <img src="~/img/ladybug.svg" style="width:50%"/>
            </div>*@
            <!-- Account Login -->
            <div class="card shadow mt-4">
                <div class="card-header">
                    <i class="fas fa-user text-secondary"></i>
                    <strong>Member Login</strong>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mt-2">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox mt-1">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Log in</button>
                        </div>
                        <div class="mt-2">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            <br />
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            <br />
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Demo Account Login -->
            <div class="card shadow mt-4">
                <div class="card-header">
                    <i class="fas fa-user-secret text-secondary"></i>
                    <strong>Demo Account Login</strong>
                </div>
                <div class="card-body text-center">
                    <a class="btn btn-danger" asp-page="./DemoLogin">Demo log in</a>
                </div>
            </div>


        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
